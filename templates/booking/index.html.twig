{% extends 'base.html.twig' %}

{% block title %}There is your bookings
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row text-center py-5">
			<h1>My bookings</h1>
		</div>
		{% if bookings|length > 0 %}
			{% for item in bookings %}
				{# TODO: Create a card booking component #}
						<div class="card" style="col width: 18rem;">
							<div class="card-body">
								<h5 class="card-title">{{ item.room.title }}</h5>
							<p class="card-text">Booked from:
								{{ item.checkIn|date('d/m/Y') }}</p>
							<p class="card-text">Booked to:
								{{ item.checkOut|date('d/m/Y') }}</p>
								<a href="bookings/{{ item.id }}" class="btn btn-custom">Show booking</a>
							</div>
						</div>
					{% endfor %}

				{% else %}
					<div class="text-center">
						<p>You don't have any booking yet.</p>
						<a href={{ path('app_room') }} class="btn btn-custom rounded-pill w-auto">Book a room</a>
					</div>
				{% endif %}
			</div>
		{% endblock %}

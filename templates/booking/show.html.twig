{% extends 'base.html.twig' %}

{% block title %}My booking
{% endblock %}

{% block body %}
	{# montrer un booking correspondant a son id #}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1>My booking</h1>
				<table class="table">
					<tr>
						<th>Booking ID</th>
						<th>Room</th>
						<th>Name of traveler</th>
						<th>Number of guests</th>
						<th>Check-in Date</th>
						<th>Check-out Date</th>
					</tr>
					<tr>
						<td>{{ booking.id }}</td>
						<td>{{booking.room}}</td>
						<td>{{ booking.traveler }}</td>
						<td>{{ booking.occupants }}</td>
						<td>{{ booking.checkIn|date('Y-m-d') }}</td>
						<td>{{ booking.checkOut|date('Y-m-d') }}</td>
					</tr>
				</table>
			</div>
		</div>

	{% block footer %}
		{% include 'components/footer-city.html.twig' %}
	{% endblock %}
{% endblock %}